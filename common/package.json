    "@babel/preset-env": "^7.4.3",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "gulp-babel": "^8.0.0",
    "regenerator-runtime": "0.13.2",
    // @endif

    // @if typescript
    "typescript": "^3.4.3",
    "gulp-typescript": "^5.0.1",
    "tslint": "5.16.0",
    // @endif

    // @if sass
    "gulp-sass": "^4.0.2",
    "sass-lint": "^1.12.1",
    // @endif

    // @if less
    "gulp-less": "^4.0.1",
    "lesshint": "^6.3.6",
    // @endif

    // @if jasmine
    "jasmine-core": "^3.4.0",
    "jasmine-reporters": "^2.3.2",
    // @if typescript
    "@types/jasmine": "^3.3.12",
    // @endif
    // @endif

    // @if jasmine || tape
    "tap-dot": "^2.0.0",
    "tape-run": "^5.0.0",
    // @endif

    // @if tape
    "tape": "^4.10.1",
    // @if typescript
    "@types/tape": "4.2.33"
    // @endif
    // @endif

    // @if jest
    "jest": "^24.7.1",
    // @if typescript
    "@types/jest": "^24.0.11"
    // @endif
    // @endif

    // @if ava
    "ava": "^1.4.1",
    // @endif

    // @if !sfc
    "merge2": "^1.2.3",
    // @endif

    "gulp-postcss": "^8.0.0",
    "autoprefixer": "^9.5.1",
