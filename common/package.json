    "browser-sync": "^2.26.3",
    "connect-history-api-fallback": "^1.6.0",
    "cross-env": "^5.2.0",
    "del": "^4.1.0",
    "gulp": "^4.0.0",
    "gulp-cache": "^1.1.1",
    "gulp-dumber": "^0.10.3",
    "gulp-if": "^2.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-terser": "^1.1.7",
    "promise-polyfill": "^8.1.0",
  },
  "scripts": {
    // @if sass
    "css-lint": "sass-lint -c .sass-lint.yml 'src/**/*.scss'",
    // @endif
    // @if less
    "css-lint": "lesshint 'src/**/*.less'",
    // @endif
    // @if babel
    "js-lint": "eslint src test",
    // @endif
    // @if typescript
    "js-lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    // @endif
    // @if aurelia
    "html-lint": "htmlhint -c .htmlhintrc src",
    // @endif
    "lint": "npm run js-lint/* @if sass || less */ && npm run css-lint/* @endif *//* @if aurelia */ && npm run html-lint/* @endif */",

    // @if jasmine || tape
    "pretest": "npm run lint && npm run test-build",
    "test-build": "cross-env NODE_ENV=test gulp build",
    "test": "tape-run < dist/entry-bundle.js | tap-dot",
    // @endif

    // @if jasmine
    "browser-test": "npm run test-build && browser-run --input html --static . --browser chrome < SpecRunner.html"
    // @endif

    // @if tape
    "browser-test": "npm run test-build && browser-run --browser chrome < dist/entry-bundle.js"
    // @endif

    // @if jest
    "pretest": "npm run lint",
    "test": "jest"
    // @endif

    // @if ava
    "pretest": "npm run lint",
    "test": "ava"
    // @endif
  }
}
